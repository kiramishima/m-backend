FROM golang:1.21.5-alpine as build
ENV API_NAME=api-bonds
ENV APP_SECRET=B@nk4I
ENV MODE=Development
# Database
ENV DATABASE_DRIVER=pgx
ENV DATABASE_URL=postgresql://postgres:123456@192.168.100.47/cic-challenge
ENV DATABASE_MAX_OPEN_CONNECTIONS=25
ENV DATABASE_MAX_IDDLE_CONNECTIONS=25
ENV DATABASE_MAX_IDDLE_TIME=15m
# HTTP
ENV HTTP_SERVER_IDLE_TIMEOUT=60s
ENV PORT=8080
ENV HTTP_SERVER_READ_TIMEOUT=1s
ENV HTTP_SERVER_WRITE_TIMEOUT=2s
#JWT
ENV TOKEN_TTL=3600
ENV JWT_PRIVATE_KEY=FLDSMDFR
# Email
ENV MAIL_MAILER=smtp
ENV MAIL_HOST=smtp.mailtrap.io
ENV MAIL_PORT=2525
ENV MAIL_USERNAME=user
ENV MAIL_PASSWORD=pass
ENV MAIL_ENCRYPTION=tls
# Cache
ENV CACHE_ADDR=192.168.100.47:6379
ENV CACHE_PWD=""

RUN mkdir /app
ADD . /app/
WORKDIR /app
COPY ./go.mod .
COPY ./go.sum .
ENV GOPROXY https://proxy.golang.org,direct
RUN go mod download
ENV CGO_ENABLED=0
RUN GOOS=linux go build -ldflags '-w -s' -a -installsuffix cgo -o $API_NAME ./cmd/api/main.go

FROM scratch as serve
WORKDIR /app
COPY --from=build /app/$API_NAME .
CMD ["/app/api-bonds"]